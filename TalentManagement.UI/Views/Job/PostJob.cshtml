@model TalentManagement.Application.ViewModels.PostAJobViewModel
@using TalentManagement.Domain.Enum;
@{
    ViewData["Title"] = "AddTalent";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">
            <div class="row">
                <div classs="card shadow border-0 mt-4">
                    <div class="card-header bg-dark bg-gradient ml-0 py-4">
                        <div class="row">
                            <div class="col-12 text-center">
                                <h2 class="py-2 text-white">Fill the required inforamtion </h2>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <div class="row pt-3">
                            <div class="col-md-12 ">
                                <form asp-controller="Job" asp-action="PostJob" class="row" enctype="multipart/form-data">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-floating mb-3 col-md-6">
                                        <input asp-for="CompanyName" class="form-control " />
                                        <label asp-for="CompanyName" class="ms-2 text-muted"></label>
                                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-3 col-md-6">
                                        <input asp-for="CompanyEmail" class="form-control " />
                                        <label asp-for="CompanyEmail" ></label>
                                        <span asp-validation-for="CompanyEmail" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-3 col-md-12">
                                        <input asp-for="JobTitle" class="form-control" />
                                        <label asp-for="JobTitle" class="ms-2 text-muted"></label>
                                        <span asp-validation-for="JobTitle" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-3 col-md-6">
                                        <select asp-for="Country" class="form-select " asp-items="Html.GetEnumSelectList<Country>()">
                                            <option value="" selected disabled>Select Country</option>
                                        </select>
                                        <label asp-for="Country" class="ms-2 text-muted"></label>
                                        <span asp-validation-for="Country" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-3 col-md-6">
                                        <select asp-for="Education" asp-items="@Model.EducationTypes" class="form-select">
                                            <option disabled selected>Select primary High level Education Required</option>
                                        </select>
                                        <label asp-for="Education" class="ms-2 text-muted"></label>
                                        <span asp-validation-for="Education" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-3 col-md-6">   
                                        <input asp-for="PostedDate" type="date" class="form-control " />
                                        <label asp-for="PostedDate" class="ms-2 text-muted"></label>
                                        <span asp-validation-for="PostedDate" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-3 col-md-6">
                                        <input asp-for="JobDeadline" type="date" class="form-control " />
                                        <label asp-for="JobDeadline" class="ms-2 text-muted"></label>
                                        <span asp-validation-for="JobDeadline" class="text-danger"></span>
                                    </div>
                                   
                                    <div class="form-floating mb-3 col-md-6">
                                        <select asp-for="JobType" asp-items="@Model.JobTypes" class="form-select">
                                            <option disabled selected>Select Job Type</option>
                                        </select>
                                        <label asp-for="JobType" class="ms-2 text-muted"></label>
                                        <span asp-validation-for="JobType" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-3 col-md-6">
                                        <input asp-for="YearsOfExp" type="number" class="form-control " />
                                        <label asp-for="YearsOfExp" class="ms-2 text-muted"></label>
                                        <span asp-validation-for="YearsOfExp" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-3 col-md-6">
                                        <input asp-for="Vacancy" type="number" path="email" id="email" class="form-control input-sm" />
                                        <label asp-for="Vacancy" class="ms-2 text-muted"></label>
                                        <span asp-validation-for="Vacancy" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-3 col-md-6">
                                        <input asp-for="Salary" type="number" class="form-control " />
                                        <label asp-for="Salary" class="ms-2 text-muted"></label>
                                        <span asp-validation-for="Salary" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-3 col-md-12">
                                        @Html.ListBoxFor(model => model.SelectedSkills, new MultiSelectList(Model.Skills, "Value", "Text"), new { @class = "form-control input-sm", style = "width: 100%", multiple = "multiple", id = "Skills_dropdown"})
                                        <label class="ms-2 text-muted" asp-for="SelectedSkills"></label>
                                        <br />
                                        <span asp-validation-for="SelectedSkills" class="text-danger"></span>

                                    </div>
                                    <div class="form-floating mb-3 col-md-12">
                                        <textarea asp-for="JobDescription" class="form-control"></textarea>
                                        <label asp-for="JobDescription" class="ms-2 text-muted"></label>
                                        <span asp-validation-for="JobDescription" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <br />
                                        <a class="w-100 btn btn-lg btn-outline-secondary" asp-controller="Job" asp-action="YourPosts">Back</a>
                                        <br />
                                        <br />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <br />
                                        <input class="w-100 btn btn-lg btn-dark" type="submit" value="Post" />
                                        <br />
                                        <br />
                                    </div>
                                    

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script type="text/javascript">

        $(document).ready(function () {
            $('#Skills_dropdown').multiselect();
        });
    </script>
    }
