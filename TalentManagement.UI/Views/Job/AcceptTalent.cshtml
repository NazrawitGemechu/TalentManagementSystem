<form method="post" asp-action="AcceptTalent" class="email-form">
    <div class="form-group">
        <label for="from-input">From:</label>
        <input type="text" id="from-input" name="from" class="form-control" value="@Model.FromEmail" readonly />
    </div>
    <div class="form-group">
        <label for="to-input">To:</label>
        <input type="text" id="to-input" name="to" class="form-control" value="@Model.ToEmail"  />
    </div>
    <div class="form-group">
        <label for="subject-input">Subject:</label>
        <input type="text" id="subject-input" name="subject" class="form-control" />
    </div>
    <div class="form-group">
        <label for="body-input">Body:</label>
        <textarea id="body-input" name="body" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-success">Send</button>
</form>

<style>
    .email-form {
        border: 1px solid #ccc;
        padding: 10px;
        max-width: 600px;
        margin: 0 auto;
        font-family: Arial, sans-serif;
    }

    .form-group {
        margin-bottom: 10px;
    }

    label {
        font-weight: bold;
        display: block;
        margin-bottom: 5px;
    }

    input[type="text"],
    textarea {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
        font-size: 16px;
    }

    textarea {
        height: 200px;
    }

